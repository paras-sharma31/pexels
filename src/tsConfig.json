{
    "extends": "./configs/base",
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "main.ts",
        "supplemental.ts",
        "src/**/*",
        "tests/**/*"
    ]
}